<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.Views.BindingPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nombre:"></Label>
            <Entry x:Name="txtnombre"></Entry>

            <Label Text="Apellido:"></Label>
            <Entry x:Name="txtapellido"></Entry>

            <Label Text="Edad"></Label>
            <Entry x:Name="txtedad" Keyboard="Numeric"></Entry>

            <Label Text="Correo"></Label>
            <Entry x:Name="txtcorreo" Keyboard="Email"></Entry>

            <Button x:Name="btnbinding" Text="Enviar informacion" Clicked="btnbinding_Clicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>