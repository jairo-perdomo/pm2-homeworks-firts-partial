<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Calculadora en Xamarin" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="num1"
               Placeholder="Ingrese numero uno"
               Keyboard="Numeric">
            
        </Entry>
        <Entry x:Name="num2"
               Placeholder="Ingrese numero uno"
               Keyboard="Numeric">

        </Entry>

        <Button Text="Sumar" x:Name="btnadition" Clicked="btnagregar_Clicked"></Button>
        <Button Text="Restar" x:Name="btnsubstraction" Clicked="btnsubstraction_Clicked"></Button>
        <Button Text="Multiplicar" x:Name="btnmultiplication" Clicked="btnmultiplication_Clicked"></Button>
        <Button Text="Dividir" x:Name="btndivision" Clicked="btndivision_Clicked"></Button>
    </StackLayout>

</ContentPage>
